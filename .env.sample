# .env.sample
# 環境変数設定ファイルのサンプル
# このファイルをコピーして `.env` という名前で保存し、必要に応じて値を変更してください。

# 画像の範囲設定
START_IMAGE_NUMBER=1
END_IMAGE_NUMBER=36

# グリッドの設定
GRID_ROWS=6
GRID_COLS=6
GAP_HORIZONTAL=0
GAP_VERTICAL=0

# 画像のサイズと形式
IMAGE_HEIGHT=100
ASPECT_RATIO_W=4
ASPECT_RATIO_H=3
CROP_POSITION=center

# 背景色（white, black, red, green, blue または R,G,B形式）
BACKGROUND_COLOR=255,255,255

# アニメーションの設定
ANIMATION_DURATION=4
FPS=30
# スライド速度（1.0が通常速度、2.0は2倍速、0.5は半分速度）
SLIDE_SPEED=1.0

# 動画の枠サイズ設定
# 'AUTO': グリッドサイズから自動計算（デフォルト）
# 'HD': 1920x1080 (フルHD)
# 'HD_HALF': 1920x540 (HD半分の高さ)
# 'CUSTOM': 下記のカスタムサイズを使用
FRAME_SIZE_PRESET=AUTO
# カスタムサイズ（FRAME_SIZE_PRESET=CUSTOMの場合に使用）
FRAME_WIDTH=1920
FRAME_HEIGHT=1080

# 処理速度の最適化設定
# 並列処理を有効化（Apple M2チップでは自動的に最適化）
PARALLEL_PROCESSING=true
# Apple VideoToolboxを使用した高速エンコーディング（M1/M2チップのみ）
USE_VIDEOTOOLBOX=true
# メモリ効率のためのバッチサイズ（高い値は高速だがメモリを多く使用）
MEMORY_BATCH_SIZE=30
# FFmpegエンコーディングプリセット（ultrafast, superfast, veryfast, faster, fast, medium, slow）
FFMPEG_PRESET=faster
# ビットレート
BITRATE=5M

# 出力設定
OUTPUT_FILENAME=output/sliding_tiles.mp4 